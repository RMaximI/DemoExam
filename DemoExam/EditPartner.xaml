<Window x:Class="DemoExam.EditPartner" ResizeMode="NoResize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoExam"
        mc:Ignorable="d"
        Title="Редактирование данных о партнёре" Height="550" Width="500">
    <DockPanel Margin="20,20,20,20">
        <DockPanel DockPanel.Dock="Top">
            <Label Content="Наименование" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="15" DockPanel.Dock="Left"/>
            <TextBox Background="#F4E8D3" Name="nameTextBox" HorizontalAlignment="Right" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="43" FontSize="15" DockPanel.Dock="Right"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="0,10,0,0">
            <Label Content="Тип" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="15" DockPanel.Dock="Left"/>
            <ComboBox Background="#F4E8D3" Name="typeComboBox" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Center" Width="300" Height="43" FontSize="15" DockPanel.Dock="Right"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="0,10,0,0">
            <Label Content="Рейтинг" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="15" DockPanel.Dock="Left"/>
            <TextBox Background="#F4E8D3" Name="ratingTextBox" HorizontalAlignment="Right" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="300" Height="43" FontSize="15" DockPanel.Dock="Right"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="0,10,0,0">
            <Label Content="Адрес" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="15" DockPanel.Dock="Left"/>
            <TextBox Background="#F4E8D3" Name="addressTextBox" HorizontalAlignment="Right" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="300" Height="43" FontSize="15"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="0,10,0,0">
            <Label Content="Фио" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="15" DockPanel.Dock="Left"/>
            <TextBox Background="#F4E8D3" Name="directorTextBox" HorizontalAlignment="Right" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="43" FontSize="15" DockPanel.Dock="Right"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="0,10,0,0">
            <Label Content="Телефон" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="15" DockPanel.Dock="Left"/>
            <TextBox Background="#F4E8D3" Name="phoneTextBox" HorizontalAlignment="Right" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="43" FontSize="15" DockPanel.Dock="Right"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="0,10,0,0">
            <Label Content="Email" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="15" DockPanel.Dock="Left"/>
            <TextBox Background="#F4E8D3" Name="emailTextBox" HorizontalAlignment="Right" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="43" FontSize="15" DockPanel.Dock="Right"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Bottom" Margin="0,10,0,0">
            <Button Name="back_button"  Content="Назад" HorizontalAlignment="Right" Margin="10,0,0,0" VerticalAlignment="Bottom" Height="36" Width="62" Click="back_button_Click" DockPanel.Dock="Right"/>
            <Button Name="save_button" Background="#67BA80" Content="Сохранить" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Bottom" Height="36" Width="77" Click="save_button_Click" DockPanel.Dock="Right"/>
        </DockPanel>
    </DockPanel>
</Window>
