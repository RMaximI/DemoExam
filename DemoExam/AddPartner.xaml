<Window x:Class="DemoExam.AddPartner" ResizeMode="NoResize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление партнёра" Height="550" Width="500">
    <DockPanel Margin="20,20,20,20">
        <DockPanel DockPanel.Dock="Top">
            <Label Content="Наименование" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15"/>
            <TextBox Background="#F4E8D3" Name="nameTextBox" HorizontalAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Center" Width="300" Height="43" FontSize="15"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="0,10,0,0">
            <Label Content="Тип" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15"/>
            <ComboBox Background="#F4E8D3" Name="typeComboBox" HorizontalAlignment="Right" VerticalAlignment="Center" Width="300" Height="43" FontSize="15"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="0,10,0,0">
            <Label Content="Рейтинг" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15"/>
            <TextBox Background="#F4E8D3" Name="ratingTextBox" HorizontalAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Center" Width="300" Height="43" FontSize="15"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="0,10,0,0">
            <Label Content="Адрес" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15"/>
            <TextBox Background="#F4E8D3" Name="addressTextBox" HorizontalAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Center" Width="300" Height="43" FontSize="15"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="0,10,0,0">
            <Label Content="Фио" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15"/>
            <TextBox Background="#F4E8D3" Name="directorTextBox" HorizontalAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Center" Width="300" Height="43" FontSize="15"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="0,10,0,0">
            <Label Content="Телефон" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15"/>
            <TextBox Background="#F4E8D3" Name="phoneTextBox" HorizontalAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Center" Width="300" Height="43" FontSize="15"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="0,10,0,0">
            <Label Content="Email" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15"/>
            <TextBox Background="#F4E8D3" Name="emailTextBox" HorizontalAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Center" Width="300" Height="43" FontSize="15"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="0,10,0,0">
            <Label Content="ИНН" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15"/>
            <TextBox Name="innTextBox" Background="#F4E8D3" HorizontalAlignment="Right" VerticalAlignment="Center" Width="300" Height="43" FontSize="15"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="0,10,0,0">
            <Button Name="back_button" Content="Назад" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="36" Width="62" Click="back_button_Click" DockPanel.Dock="Right"/>
            <Button Name="save_button" Background="#67BA80" Content="Сохранить" HorizontalAlignment="Right" Margin="0,0,20,0" VerticalAlignment="Bottom" Height="36" Width="77" Click="save_button_Click" DockPanel.Dock="Right"/>
        </DockPanel>
    </DockPanel>
</Window>
